// https://code.visualstudio.com/docs/devcontainers/create-dev-container
{
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "workspaceFolder": "..",
    "mounts": [
        "source=${localWorkspaceFolder}/python,target=/app/python,type=bind"
    ]
    // "postCreateCommand":
}